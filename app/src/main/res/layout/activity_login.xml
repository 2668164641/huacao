<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="89dp"
        android:text="Hi 等你很久了"
        android:textColor="@color/colorPrimaryGray"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="18dp"
        android:text="快速用花，输入手机号即可登录"
        android:textColor="@color/colorGray"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="41dp"
            android:background="@null"
            android:hint="请输入您的手机号"
            android:inputType="phone"
            android:singleLine="true"
            android:textColorHint="@color/colorTextHint"
            android:textSize="18sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="36dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/clear_phone_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/guanbi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/selector_btn"
                android:paddingBottom="6dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingTop="6dp"
                android:text="获取验证码"
                android:textColor="#ffffffff"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="41dp"
        android:layout_marginRight="41dp"
        android:layout_marginTop="19dp"
        android:background="@color/colorLine" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="25dp"
        android:background="@null"
        android:hint="请输入六位数验证码"
        android:inputType="phone"
        android:textColorHint="@color/colorTextHint"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="41dp"
        android:layout_marginRight="41dp"
        android:layout_marginTop="19dp"
        android:background="@color/colorLine" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/selector_btn"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="登录即代表同意《用户协议》&#38;《隐私权条款》"
        android:textColor="#ff999999"
        android:textSize="14sp" />
</LinearLayout>